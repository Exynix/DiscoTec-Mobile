<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141414"
    tools:context=".ChatMenuActivity">

    <TextView
        android:id="@+id/parche"
        android:layout_width="266dp"
        android:layout_height="80dp"
        android:fontFamily="@font/bungee_inline"
        android:text="Mis Parches"
        android:textColor="#FF128B"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="52dp" />

    <ImageView
        android:id="@+id/anadir"
        android:layout_width="28dp"
        android:layout_height="33dp"
        android:src="@drawable/MAS"
        tools:layout_editor_absoluteX="367dp"
        tools:layout_editor_absoluteY="80dp"
        app:tint="#FFFFFF" />

    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="74dp"
        android:background="#2F0040"
        android:orientation="horizontal"
        android:padding="15dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="163dp">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Buscar uno de tus parches"
            android:inputType="text"
            android:textColorHint="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="5dp"
            app:tint="#FFFFFF"
            android:src="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="451dp"
        android:orientation="vertical"

        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="254dp"
        android:background="#6F2C7C">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Mssg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Juan"
                android:textColor="#FA128B"
                android:textSize="30sp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>